{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"target": "ESNext",
		"moduleResolution": "node10",
		"module": "ESNext",
		"declaration": true,
		"isolatedModules": true,
		"noEmit": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
